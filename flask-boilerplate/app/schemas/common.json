{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "common.json",
	"type": "object",
	"title": "Indicators objects",
	"definitions": {
		"mongodb_id": {
			"type": "string",
			"pattern": "^[0-9a-fA-F]{24}$"
		},
		"phone_number": {
			"type": "string",
			"pattern": "^\\+1\\d{10}$",
			"title": "Phone number in +1XXXXXXXXXX format"
		},
		"date_iso": {
			"type": "string",
			"title": "Date string schema",
			"pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
		},
		"datetime_iso": {
			"type": "string",
			"title": "Date string schema",
			"pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}$"
		}
	}
}
